{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "eqeqeq": 2,
    "no-caller": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "quotes": "single",
    "no-new-func": 2,
    "camelcase": [2, "always"],
    "strict": [2, "global"],
    "comma-spacing": [2, {"before": false, "after": true}],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "space-before-blocks": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "dot-notation": 0,
    "eol-last": 0
  }
}
